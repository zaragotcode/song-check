<%- include('../partials/html-head') %>
<!-- <link rel='stylesheet' href='/stylesheets/songs/index.css'> -->
<%- include('../partials/nav') %> 

<main>
  <% if (!user) { %>
    <h1><%= title %></h1>
  <% } %>
  <img
  src="<%= profile.avatar %>"
  alt="<%= profile.name %> avatar"
  />
  <% if (!user) { %>
  <h3> <%= profile.name %>  has been a user since: <%= profile.createdAt.toLocaleDateString()  %></h3>
  <% } else { %> 
    <h3> Hello <%= profile.name %> !</h3>
  <% } %>
  <div>Location: <%= profile.location %> </div>
  <div>Favorite Artist: <%= profile.favoriteArtist %> </div>
  <div>General Assembly Alumni: <%= profile.gaAlumni ? 'Yes' : 'No' %></div>
  <% if (profile._id.equals(user?.profile._id)) { %>
    <a href='/profiles/<%= profile._id %>/edit'>
      <button>Edit User</button>
    </a>
  <% } %>
</main>
<%- include('../partials/footer') %>