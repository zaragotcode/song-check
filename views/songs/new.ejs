<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/movies/new.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/movies" method="POST">
    <label for="title-input">Title:</label>
    <input required type="text" name="title" id="title-input">
    <label for="release-year-input">Rrtist: </label>
    <input type="text" name="releaseYear" id="release-year-input">
    <label for="mpaa-rating-select">MPAA Rating:</label>
    <select name="mpaaRating" id="mpaa-rating-select">
      <option value="G">G</option>
      <option value="PG">PG</option>
      <option value="PG-13">PG-13</option>
      <option value="R">R</option>
    </select>
    <button type="submit">Add Movie</button>
  </form>
</main>

<%- include('../partials/footer') %> 